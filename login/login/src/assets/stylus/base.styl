
html,body,div,h1,h2,h3,h4,h5,h6,p,img,ul,li,input,span,a,i
  padding:0
  margin: 0
html
  font-family: "microsoft yahei", "HanHei SC","PingHei","PingFang SC","STHeitiSC-Light","Helvetica Neue","Helvetica","Arial",sans-serif
img
  border: none
  vertical-align: top
  width: 100%
a
  text-decoration: none

input,textarea,button
  outline: none
  -webkit-appearance: none

textarea
  resize: none
  overflow: hidden

li
  list-style: none
*
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  -webkit-tap-highlight-color: transparent

.clear
  zoom: 1
.clear:after
  content: ""
  display: block
  clear: both

  $com_button_color = rgba(255,12,12,0.03)
  $com_button_active_color = rgba(255,12,12,0.05)

  $border_color = red;